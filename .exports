# Make vim the default editor
export EDITOR="vim"
# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help"

export NODE_PATH=/usr/local/share/npm/lib/node_modules
export NVM_DIR="$HOME/.nvm"
  . "/usr/local/opt/nvm/nvm.sh"
export NPM_PATH=/usr/local/share/npm/bin
export RBENV_PATH=~/.rbenv/shims
export ZPLUG_HOME=/usr/local/opt/zplug
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
export GO_PATH=$HOME/Development/go
export GO_BIN_PATH=$GO_PATH/bin
export DOTFILES_BIN_PATH=~/.bin

BIN_PATH=/usr/local/bin:/usr/bin:/usr/local/sbin:/bin:/usr/sbin:/sbin

export PATH=$DOTFILES_BIN_PATH:$RBENV_PATH:$BIN_PATH:$NPM_PATH:$GO_BIN_PATH

export LESSOPEN="| $(which highlight) %s --out-format xterm256 --line-numbers --quiet --force --style solarized-light"
export LESS=" -R"

export ZSH=$HOME/.oh-my-zsh
JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.8.0_60.jdk/Contents/Home/"

ENHANCD_FILTER=fzf
export ENHANCD_FILTER

export FZF_DEFAULT_OPTS='--multi --extended --reverse'

export PATH="$HOME/.yarn/bin:$PATH"

# Make vim the default editor
export EDITOR="vim"
# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help"

export NODE_PATH=/usr/local/share/npm/lib/node_modules
export RVM_PATH=~/.rvm/bin
export RVM_GEM_PATH=$GEM_HOME:$GEM_PATH
export NPM_PATH=/usr/local/share/npm/bin
export BIN_PATH=/usr/local/bin:/usr/bin:/usr/local/sbin:/bin:/usr/sbin:/sbin

export PATH=$RVM_GEM_PATH:$RVM_PATH:$BIN_PATH:$NPM_PATH

export ZSH=~/.oh-my-zsh
export JAVA_HOME="/Library/Java/JavaVirtualMachines/1.7.0.jdk/Contents/Home"
export ANDROID_SDK_ROOT=/usr/local/opt/android-sdk

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function